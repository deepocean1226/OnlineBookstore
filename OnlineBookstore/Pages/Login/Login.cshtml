<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>login UI</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    @if (Model.Login_b)
    {

    <div class="box">
        <h2>登录成功</h2>
        <form>
            <div align="center" style="position:relative;top:10px">
                <button class="button-index" type="submit" asp-page="/Index">返回主页</button>
            </div>
        </form>
    </div>
}
else
{
    <div class="box">
        <h2>网上书店系统登录</h2>
        <form method="post">
            <div class="inputBox">
                <input type="text" asp-for="User.UserName">
                <label>用户名</label>
            </div>
            <div class="inputBox">
                <input type="password" asp-for="User.Pwd">
                <label>密码</label>
            </div>
            <div>
                <button type="submit">登录</button>
                <button type="submit" asp-area="" asp-page="/SignOn/SignOn">注册</button>
            </div>
            @if (!Model.Name)
            {
                <p style="color:red">用户不存在！</p>
            }
            @if (!Model.Password)
            {
                <p style="color:red">密码错误！</p>
            }
        </form>
    </div>
    }
</body>
</html>